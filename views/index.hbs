<h1 class="">asdasdasdas</h1>
<div class="main-wrap">
    <input id="slide-sidebar" type="checkbox" role="button" />
    <label for="slide-sidebar">
            <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
    </label>
    <div class="sidebar">
        <h3>Menu</h3>
        <ul class="list-group">
            <li class="list-group-item">Map</li>
            <li class="list-group-item">Timeline</li>
            <li class="list-group-item">My Account</li>
          {{#if nickname}}
              <li class="list-group-item">{{nickname}}</li>
              <li class="list-group-item"><a href="/logout">Logout</a></li>
          {{/if}}

          {{#unless nickname}}
              <li class="list-group-item"><a href="/login">Settings</a></li>
          {{/unless}}
        </ul>
    </div>
    <div class="portfolio"></div>
</div>

<style>
    .sidebar {
        width: 150px;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
    }

    .sidebar h1 {
        color: white;
    }

    .portfolio {
        background-color: white;
        position: absolute;
        top: 0;
        left: 150px;
        right: 0;
        bottom: 0;

        -moz-transition: left 0.5s ease;
        transition: left 0.5s ease;
    }

    input[type=checkbox] {
        display: none;
    }

    input:checked ~ .portfolio {
        left: 0;
    }

    input:checked ~ label {
        left: 0;
    }

    label {
        z-index: 2;
        position: absolute;
        top: 0;
        left: 150px;
        -moz-transition: left 0.5s ease;
        transition: left 0.5s ease;
    }

</style>